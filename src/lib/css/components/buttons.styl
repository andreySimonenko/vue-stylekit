.{newAppName}-button
  height 49px
  box-sizing border-box
  font-size 16px
  text-align center
  text-transform none
  border-radius 5px
  box-shadow 0 2px 5px rgba(0, 0, 0, 0)
  margin 0
  padding-left horizontal-space
  padding-right horizontal-space
  cursor pointer
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, box-shadow, border, text-shadow, color, opacity

  &[disabled]
    box-shadow none !important
    cursor: default

  &--is-fitched
    color transparent !important

  &--is-block
    display block
    min-width 100%

  .ripple-wave
    background-color default-wive-color

  &-with-ripple
    overflow hidden
    padding-left 0
    padding-right 0

  & + &
    margin-left horizontal-space

  &-vertical
    display table

    & + &
      margin-top vertical-space
      margin-left 0

  &-small
    height 34px
    font-size 14px

    .ripple
      padding-left 12px
      padding-right 12px

  &-md-small
    @media (max-width: mobile-upper-limit)
      height 34px
      font-size 14px

      .ripple
        padding-left 12px
        padding-right 12px

  &:before
    display none
    opacity 0

  &-orange
    color #fff
    background-color b2c-orange

    &.{newAppName}-button-no-wive &:active
      background-color b2c-orange-low

    &:hover,
    &:focus
      box-shadow 0 2px 5px rgba(0, 0, 0, .2)
      background-color: b2c-orange-high

    &[disabled]
      background-color b2c-black01
      color white
      .{newAppName}-dark-theme &
        background-color: b2c-white01
        border-color b2c-white
        color b2c-white03


    .ripple-wave
      background-color color-button-wive-color

  &-orange-border
    color b2c-orange
    background-color transparent
    border 2px solid b2c-orange

    &.{newAppName}-button-no-wive &:active
      background-color transparent !important

    &:hover,
    &:focus
      color b2c-orange-low
      border-color b2c-orange-low
      background-color: rgba(b2c-orange, .1)

    &[disabled]
      border-color b2c-black01
      color b2c-black01
      &:focus,
      &:hover
        background-color: transparent

      .{newAppName}-dark-theme &
        border-color b2c-white03
        color b2c-white03

    .ripple-wave
      background-color b2c-orange-low

  &-white
    border 2px solid white
    &:focus,
    &:hover
      opacity .7
      background-color: b2c-cool-grey05
      .{newAppName}-dark-theme &
        background-color: b2c-white01

    &:active
      background-color: transparent
    &[disabled]
      color b2c-black01
      &:hover
        background-color: transparent
      .{newAppName}-dark-theme &
        color b2c-white03!important
        opacity: 1
        border-color white
      .ripple-wave
        background-color b2c-cool-grey

  &-purple
    color #fff
    background-color b2c-purple

    &.{newAppName}-button-no-wive &:active
      background-color b2c-purple-low

    &:hover,
    &:focus
      box-shadow 0 2px 5px rgba(0, 0, 0, .2)
      background-color: b2c-purple-high

    &[disabled]
      color white
      background-color b2c-black01
      .{newAppName}-dark-theme &
        background-color b2c-white01
        color b2c-white03

    .ripple-wave
      background-color color-button-wive-color

  &-purple-border
    color b2c-purple
    background-color transparent
    border 2px solid b2c-purple

    .ripple
      box-shadow none

    &[disabled]
      border-color b2c-black01
      color b2c-black01
      .{newAppName}-dark-theme &
        border-color b2c-white03
        color b2c-white03
      &:focus,
      &:hover
        background-color: transparent
    &:hover,
    &:focus
      color b2c-purple-low
      border-color b2c-purple-low
      background-color: hsl(rgba(b2c-purple, .1))

    .ripple-wave
      background-color b2c-purple-low

    &[disabled]
      color b2c-black01
      border-color b2c-black01
  &-transparent
    border 2px solid transparent
    &:focus,
    &:hover
      opacity .7
      background-color: b2c-cool-grey05
      .{newAppName}-dark-theme &
        background-color: b2c-white01
    &:active
      background-color: transparent
    &[disabled]
      color b2c-black01
      &:hover
        background-color: transparent
      .{newAppName}-dark-theme &
        color b2c-white03!important
        opacity: 1
        border-color transparent
      .ripple-wave
        background-color b2c-cool-grey
