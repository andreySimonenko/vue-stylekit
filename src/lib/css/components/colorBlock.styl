.color-block
  &--white
    background-color #fff

  &--dark-slate
    background-color b2b-dark-slate

  &--purple
    background-color b2c-purple

  &--purple-low
    background-color b2c-purple-low

  &--purple-high
    background-color b2c-purple-high

  &--red
    background-color b2c-red

  &--red-low
    background-color b2c-red-low

  &--red-high
    background-color b2c-red-high

  &--dark-blue
    background-color b2c-dark-blue

  &--dark-blue-low
    background-color b2c-dark-blue-low

  &--dark-blue-high
    background-color b2c-dark-blue-high

  &--light-blue
    background-color b2c-light-blue

  &--light-blue-low
    background-color b2c-light-blue-low

  &--light-blue-high
    background-color b2c-light-blue-high

  &--yellow
    background-color b2c-yellow

  &--yellow-low
    background-color b2c-yellow-low

  &--yellow-high
    background-color b2c-yellow-high

  &--orange
    background-color b2c-orange

  &--orange-low
    background-color b2c-orange-low

  &--orange-high
    background-color b2c-orange-high

  &--pink
    background-color b2c-pink

  &--pink-low
    background-color b2c-pink-low

  &--pink-high
    background-color b2c-pink-high

  &--green
    background-color b2c-green

  &--green-low
    background-color b2c-green-low

  &--green-high
    background-color b2c-green-high

  &--black
    background-color b2c-black

.color-block--main-color
  background-color: main-color

.color-block--light-grey
  background-color light-grey

.color-block--rule-color
  background-color rule-color

.color-block--rule-color
  background-color #272F3D
.color-block--game-promo-color
  background-color game-promo-color
